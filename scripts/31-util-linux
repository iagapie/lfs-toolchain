name=util-linux
version=2.34
source=(https://www.kernel.org/pub/linux/utils/util-linux/v$version/util-linux-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/tools                \
            --without-python               \
            --disable-makeinstall-chown    \
            --without-systemdsystemunitdir \
            --without-ncurses              \
            PKG_CONFIG=""
	make
	make install
}
